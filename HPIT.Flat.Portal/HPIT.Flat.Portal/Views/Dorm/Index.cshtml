                    {{each  Data}}
                    <tr>
                        <td>${DormNo}</td>
                        <td>${DormName}</td>
                        <td>${TypeStr}</td>
                        <th>${RentMoney}</th>
                        <td>${Phone}</td>
                        <td>${SizeStr}</td>
                        <td>${Remark}</td>
                        <td>${StatusStr}</td>
                        <th style="width:90px;text-align:center;" colspan="2">
                            <a href="#" type="assign" dno="${DormNo}" did="${DID}">人员分配</a>
                            <a href="#" type="edit" dormStr="${DormJsonStr}">编辑</a>
                            <a href="#" type="delete">删除</a>
